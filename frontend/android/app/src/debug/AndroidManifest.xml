<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The INTERNET permission is required for development. Specifically,
         the Flutter tool needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:label="frontend"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true"
        android:allowBackup="true">
    <!-- AppAuth configuration for development -->
        <meta-data
            android:name="net.openid.appauth.allow_http"
            android:value="true" />
        <meta-data
            android:name="net.openid.appauth.allow_insecure_connections"
            android:value="true" />
        <meta-data
            android:name="net.openid.appauth.allow_http_for_redirect_uris"
            android:value="true" />
        <meta-data
            android:name="net.openid.appauth.allow_http_for_token_endpoint"
            android:value="true" />
    </application>
</manifest>
